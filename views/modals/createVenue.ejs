<div class="modal fade" id="create-venue-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Create Venue</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form v-on:submit.prevent="createVenue">
                    <div class="form-group">
                        <label>Venue Name</label>
                        <input class="form-control" type="text" v-model="createVenueForm.name" requried>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <div class="row mx-1">
                            <input class="form-control col-6" type="text" placeholder="Building Number" v-model="createVenueForm.number" required>
                            <input class="form-control col-6" type="text" placeholder="Postcode" v-model="createVenueForm.postCode" required>
                        </div>
                    </div>
                    <button class="form-control btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>